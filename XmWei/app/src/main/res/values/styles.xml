<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>


    <style name="AppTheme_Light" parent="@style/AppTheme">

        <item name="android:windowIsTranslucent">true</item>

        <item name="account">@drawable/account_dark</item>
        <item name="account_management">@drawable/account_management_light</item>
        <item name="add">@drawable/accountactivity_new_light</item>
        <item name="remove">@drawable/accountactivity_remove_light</item>
        <item name="comment">@drawable/comment_light</item>
        <item name="reply_to_comment">@drawable/reply_to_comment_light</item>
        <item name="edit">@drawable/edit_light</item>
        <item name="fav_en">@drawable/fav_en_light</item>
        <item name="fav_un">@drawable/fav_un_light</item>
        <item name="write_weibo">@drawable/friendstimelinefragment_write_light</item>
        <item name="write_dm">@drawable/write_dm_light</item>
        <item name="location_place">@drawable/location_place_light</item>
        <item name="at">@drawable/at_light</item>
        <item name="emoticon">@drawable/emoticon_light</item>
        <item name="topic">@drawable/topic_light</item>
        <item name="settings">@drawable/maintimelineactivity_settings_dark</item>
        <item name="refresh">@drawable/refresh_light</item>
        <item name="copy">@drawable/copy_light</item>
        <item name="repost">@drawable/repost_light</item>
        <item name="search">@drawable/search_light</item>
        <item name="share">@drawable/share_light</item>
        <item name="send">@drawable/send_dark</item>
        <item name="statusnewactivity_camera">@drawable/camera_light</item>
        <item name="statusnewactivity_gps">@drawable/statusnewactivity_gps_light</item>
        <item name="statusnewactivity_send">@drawable/statusnewactivity_send_light</item>
        <item name="statusnewactivity_pic">@drawable/picture_light</item>
        <item name="error">@drawable/error_dark</item>
        <item name="location_map">@drawable/location_map_light</item>
        <item name="timeline_repost_flag">@drawable/timeline_repost_dark</item>
        <item name="timeline_comment_flag">@drawable/timeline_comment_dark</item>
        <item name="save">@drawable/save_light</item>
        <item name="web">@drawable/web_light</item>
        <item name="close">@drawable/close_light</item>
        <item name="clickable_flag">@drawable/clickable_flag_dark</item>
        <item name="timeline_reply_to_comment">@drawable/reply_to_comment_dark</item>

        <item name="timeline_gps_icon">@drawable/timeline_gps_dark</item>
        <item name="timeline_pic_icon">@drawable/timeline_pic_dark</item>
        <item name="timeline_load_more_background">@drawable/timeline_load_more_light</item>

        <item name="listview_item_background_selector">@drawable/listview_item_background_selector_light</item>
        <item name="listview_item_refresh_animation">@drawable/refresh_dark</item>
        <item name="link_color">@color/dark_blue</item>
        <item name="link_pressed_background_color">@color/link_pressed_background_color_light</item>
        <item name="line_drawable">@drawable/list_divider_holo_light</item>
        <item name="listview_checked_color">@color/listview_checked_color_holo_light</item>
        <item name="listview_pic_bg_border">@drawable/bg_timeline_picture_dark</item>
        <item name="timeline_middle_layout_background">@color/black</item>
        <item name="timeline_middle_layout_text_color">@color/timeline_item_middle_layout_text_color_light</item>
        <item name="listview_card_bg">@drawable/bg_tacos</item>
        <item name="listview_item_bg">@drawable/listview_item_background_normal_light</item>
        <item name="listview_text_color">@color/timeline_item_text_color_light</item>
        <item name="listview_pic_bg">@color/listview_pic_background_light</item>
        <item name="listview_repost_divider">@drawable/divider</item>


        <item name="profile_top_photo_background_color">@color/black</item>
        <item name="profile_detail_count_divider_color">@color/list_divider_color</item>
        <item name="profile_detail_count_bottom_color">@color/list_divider_color</item>


        <item name="browser_weibo_detail_background_color">#fcfcfc</item>
        <item name="browser_weibo_detail_comments_reposts_category_color_selected">@color/orange</item>
        <item name="browser_weibo_detail_comments_reposts_category_color_unselected">@color/black</item>

        <item name="split_line_between_content_and_bottom_button_panel">@drawable/ab_bottom_solid_inverse_holo</item>

    </style>


    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="android:Widget.ActionBar">
        <item name="android:background">@color/dodgerblue</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleText</item>
    </style>

    <style name="ActionBar.TitleText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="drawerMenuButton">
        <item name="android:textSize">@dimen/drawerTextSize</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">left|center</item>
        <item name="android:background">@drawable/btn_drawer_menu</item>
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">50.0dip</item>
        <item name="android:drawablePadding">8.0dip</item>
    </style>

    <style name="drawerMessageCount">
        <item name="android:background">@drawable/bg_message_count</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="listViewMultiImageView">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_margin">2.5dp</item>

    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

</resources>
