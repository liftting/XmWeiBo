<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res/wm.xmwei"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="1dip">

    <wm.xmwei.core.lib.support.view.material.ProgressWheel
        android:id="@+id/loading"
        android:layout_width="48dp"
        android:layout_height="48dp"
        wheel:matProg_progressIndeterminate="true"
        wheel:matProg_barColor="@color/dodgerblue"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />


    <TextView
        android:textColor="@color/red"
        android:id="@+id/error"
        android:textSize="16sp"
        android:text="@string/picture_read_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/wait"
        android:textSize="16sp"
        android:text="@string/wait_for_download_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/rly_gallery_origin_view">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_gallery_origin_view"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/child" />

</FrameLayout>